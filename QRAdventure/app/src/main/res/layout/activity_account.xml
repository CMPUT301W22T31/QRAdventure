<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="">

            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/account_default" />

            <ImageView
                android:clickable="true"
                android:onClick="goToEditInfo"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_profile" />

        </LinearLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="AccountDefault"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/source_sans_pro"
            android:paddingTop="15dp"
            android:text="1+ 800 267 2001"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/source_sans_pro"
            android:text="Phone number"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/source_sans_pro"
            android:paddingTop="10dp"
            android:text="defaultemail@hotspot.com"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:paddingBottom="10dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:gravity="center">

        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/source_sans_pro"
                android:text="Codes Scanned"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/source_sans_pro"
                android:text="Total Score"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/source_sans_pro"
                android:text="Highest QR"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/source_sans_pro"
                android:text="Lowest QR"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />


        </LinearLayout>








    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rectangle"
        android:clickable="true"
        android:onClick="goToMyCodes"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="My Codes"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:src="@drawable/qr_code1"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rectangle"
        android:clickable="true"
        android:onClick="goToMyStats"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="My Stats"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:src="@drawable/stats"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rectangle"
        android:clickable="true"
        android:onClick="goToLoginQR"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Login Code"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:src="@drawable/qr_code2"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rectangle"
        android:clickable="true"
        android:onClick="goToStatusQR"
        android:text="LOGIN CODE"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Status Code"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:src="@drawable/qr_code3"

            />

    </LinearLayout>
</LinearLayout>